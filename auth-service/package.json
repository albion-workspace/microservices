{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication & Authorization Service - Multi-provider auth with social login, OTP verification, and session management",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch --ignore dist --ignore node_modules --ignore '**/*.log' --ignore '**/*.tmp' src/index.ts",
    "build": "tsc",
    "build:run": "npm run build && npm start",
    "test": "tsx src/test.ts",
    "populate-demo": "tsx src/scripts/populate-demo-users.ts",
    "infra:generate": "service-infra generate -c infra.config.json --all",
    "infra:preview": "service-infra generate -c infra.config.json --all --dry-run",
    "infra:docker": "service-infra generate -c infra.config.json --dockerfile --compose",
    "infra:k8s": "service-infra generate -c infra.config.json --k8s"
  },
  "dependencies": {
    "access-engine": "file:../access-engine",
    "core-service": "file:../core-service",
    "notification-service": "file:../notification-service",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-instagram": "^1.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-linkedin-oauth2": "^1.5.6",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/bcrypt": "^5.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
