  "dependencies": {
    "core-service": "file:../core-service",
    "auth-service": "file:../auth-service",
    "payment-service": "file:../payment-service",
    "bonus-service": "file:../bonus-service",
    "notification-service": "file:../notification-service",
    "kyc-service": "file:../kyc-service"
