    "dev:shared": "node ../core-service/node_modules/tsx/dist/cli.mjs scripts/dev.ts --mode=shared",
    "dev:docker": "node ../core-service/node_modules/tsx/dist/cli.mjs scripts/dev.ts --mode=docker",
    "health": "node ../core-service/node_modules/tsx/dist/cli.mjs scripts/health-check.ts",
    "generate": "node ../core-service/node_modules/tsx/dist/cli.mjs scripts/generate.ts",
    "generate:nginx": "node ../core-service/node_modules/tsx/dist/cli.mjs scripts/generate.ts --nginx",
